<section class="profile">
  <h5>
    <%= user.email %>
    <% if user == current_user %>
      <span class="right">
        <% if profile.persisted? %>
          <%= link_to "Edit", edit_profile_url %>
        <% else %>
          <%= link_to "Create", new_profile_url %>
        <% end %> 
      </span>
    <% else %>
      <% star_class = (user.friends.include?(current_user) ? "friend" : "") %>
      <span class="right">
        <i class="fa fa-star <%= star_class %>" data-id="<%= user.id %>"></i>
      </span>
    <% end %>
  </h5>
  <div class="profile-element">
    <h4>
      Name
    </h4>
    <p>
       <%= profile_display profile.name %>
    </p>
  </div>
  <div class="profile-element">
    <h4>
      Location
    </h4>
    <p>
      <%= profile_display profile.location %>
    </p>
  </div>
  <div class="profile-element last-element">
    <h4>
      Biography
    </h4>
    <p>
      <%= profile_display profile.bio %>
  </div>
</section>

