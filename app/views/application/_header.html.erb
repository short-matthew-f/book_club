<header class="navigation">
  <nav class="primary clearfix">
    <div class="brand">
      <a href="/">
        My Friends' Book Club
      </a>
    </div>
    <ul class="navs right">
      <li>
        <%= link_to "Users", current_user %>
      </li>
      <li>
        <% if user_signed_in? %>
          <%= link_to "Sign Out", destroy_user_session_url, method: :delete %>
        <% else %>
          <%= link_to "Sign In / Up", new_user_session_url %>
        <% end %>
      </li>
    </ul>
  </nav>
  <%= render partial: "navbar_context" %>
</header>

<% if notice || alert %>
  <section class="information">
    <% if notice %>
      <div class="alert alert-warning">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>
  </section>
<% end %>