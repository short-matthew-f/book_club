<hr>
<div class="container-fluid navbar-context">
  <ul class="nav navbar-nav navbar-right">
    <li>
      <%= link_to "Your Page", current_user %>
    </li>
    <li>
      <%= link_to "Your Friends", user_friendships_url(current_user) %>
  </ul>
  
  <%= form_tag find_user_url, method: :post, class: "navbar-form navbar-left", role: "search" do %>
