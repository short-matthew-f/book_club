<div class="row">
  <div class="col-md-6">
    <%= form_tag book_search_url, { role: :form } do %>
      <div class="form-group">
        <%= label_tag :title, "Book title" %>
        <%= text_field_tag :title, nil, { class: "form-control", placeholder: "e.g. Winnie-the-Pooh" } %>
      </div>
      <div class="form-group">
        <%= label_tag :author, "Book title" %>
        <%= text_field_tag :author, nil, { class: "form-control", placeholder: "e.g. A. A. Milne" } %>
      </div>
      <%= submit_tag :search, { class: "btn btn-large btn-default"} %>
    <% end %>
  </div>
</div>